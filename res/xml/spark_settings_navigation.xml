<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" ">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_navigation_header"
        android:selectable="false"/>

        <Preference
            android:key="gesture_system_navigation"
            android:title="@string/system_navigation_title"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:summary="@string/system_navigation_summary"
            android:fragment="com.android.settings.gestures.SystemNavigationGestureSettings"
            settings:controller="com.android.settings.gestures.SystemNavigationPreferenceController" />

        <SwitchPreference
            android:key="navbar_visibility"
            settings:iconSpaceReserved="false"
            android:title="@string/navbar_visibility" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="pixel_nav_animation"
            settings:iconSpaceReserved="false"
            android:title="@string/pixel_navbar_anim_title"
            android:summary="@string/pixel_navbar_anim_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SecureSettingSwitchPreference
            android:key="sysui_nav_bar_inverse"
            settings:iconSpaceReserved="false"
            android:title="@string/navbar_invert_layout_title"
            android:defaultValue="false" />
        
        <PreferenceCategory
        android:title="@string/keys_action_omniswitch_short">

        <ListPreference
            android:key="navbar_recents_style"
            android:title="@string/navbar_recents_style_title"
            android:entries="@array/navbar_recents_style_entries"
            android:entryValues="@array/navbar_recents_style_values"
            android:persistent="false"/>

        <Preference
            android:icon="@drawable/ic_info_outline_24dp"
            android:persistent="false"
            android:summary="@string/recents_style_info_title" />

    </PreferenceCategory>
</PreferenceScreen>
